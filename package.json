{
  "name": "@bpetryshyn/nails-platform",
  "version": "0.1.0",
  "bin": {
    "platform": "bin/platform.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "cdk": "cdk",
    "format": "prettier --write \"bin/**/*.ts\" \"lib/**/*.ts\"",
    "lint": "eslint \"{bin,lib,test}/**/*.ts\" --fix"
  },
  "devDependencies": {
    "@aws-cdk/assert": "1.85.0",
    "@types/jest": "^26.0.10",
    "@types/node": "10.17.27",
    "@typescript-eslint/eslint-plugin": "^4.15.2",
    "@typescript-eslint/parser": "^4.15.2",
    "aws-cdk": "1.85.0",
    "eslint": "^7.20.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "jest": "^26.4.2",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "simple-git-hooks": "^2.2.0",
    "ts-jest": "^26.2.0",
    "ts-node": "^9.0.0",
    "typescript": "~3.9.7"
  },
  "dependencies": {
    "@aws-cdk/aws-ec2": "^1.92.0",
    "@aws-cdk/aws-ecs": "^1.92.0",
    "@aws-cdk/aws-elasticloadbalancingv2": "^1.92.0",
    "@aws-cdk/aws-ssm": "^1.92.0",
    "@aws-cdk/core": "^1.92.0",
    "source-map-support": "^0.5.16"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": "eslint --cache --fix"
  }
}
